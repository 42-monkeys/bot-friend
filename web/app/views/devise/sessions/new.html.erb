<div class="container">
  <div class="content">
    <section class="section">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <label class="label">Email</label>
          <div class="control"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-info" %></div>
        </div>

        <div class="field">
          <label class="label">Password</label>
          <div class="control"><%= f.password_field :password, autocomplete: "current-password", class: "input is-info" %></div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="control">
              <label class="checkbox">
                <%= f.check_box :remember_me %> Remember me
              </label>
            </div>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "button is-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </section>
  </div>
</div>